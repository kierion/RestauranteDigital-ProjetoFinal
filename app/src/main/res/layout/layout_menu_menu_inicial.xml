<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="#c3f18e"
    android:baselineAligned="false"
    android:weightSum="1">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="5dp"
        android:background="#c3f18e"
        android:baselineAligned="false"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="5dp"
            android:background="#c3f18e"
            android:baselineAligned="false"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1.93"
                android:background="@android:color/background_light"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/id_Imagem__Item_Menu_Inicial"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@android:color/background_light"
                    android:contentDescription="@string/imagem_item"
                    app:srcCompat="@mipmap/ic_launcher" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1.71"
                android:background="#c3f18e"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/idNomePrato_Menu_Inicial"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginEnd="10dp"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="10dp"
                    android:text="@string/descricao_do_item"
                    android:textSize="30sp" />

                <TextView
                    android:id="@+id/idPrecoPrato_Menu_Inicial"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginEnd="10dp"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="10dp"
                    android:text="@string/descricao_do_item"
                    android:textSize="26sp" />
            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="5dp"
            android:background="#c3f18e"
            android:gravity="center"
            android:orientation="horizontal"
            android:weightSum="1">

            <ImageButton
                android:id="@+id/idBotao_Remover_Item_Menu_Inicial"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="0.52"
                android:background="#c3f18e"
                android:contentDescription="@string/app_name"
                app:srcCompat="@drawable/icons14" />

            <TextView
                android:id="@+id/idTexto_Quantidade_Item_Menu_Inicial"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="0.05"
                android:background="@android:color/background_light"
                android:text="@string/quantidade_adicionada_de_item"
                android:textAlignment="center"
                android:textSize="50sp"
                android:textStyle="bold" />

            <ImageButton
                android:id="@+id/idBotao_Adicionar_Item_Menu_Inicial"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="0.44"
                android:background="#c3f18e"
                android:contentDescription="@string/app_name"
                app:srcCompat="@drawable/icons118" />

        </LinearLayout>
    </LinearLayout>

</RelativeLayout>